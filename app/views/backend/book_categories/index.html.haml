- provide(:title, "Редактирование тегов")
%tags
	%h1.headline1 Перечень доступных категорий
	.new_link= link_to "Добавить категорию", new_backend_tag_path
	%table.little-table
		%tr
			%th №
			%th Наименование категории
			%th Описание категории
			%th Количество книг в категории
			%th Просмотр
			%th Действие
		- @categories.each.with_index do |category, index|
			%tr
				%td= index + 1
				%td= category.name
				%td= category.description
				%td= category.books.size
				%td= link_to "Статьи с этим тегом", '#'
				%td= #link_to "Удалить", category, method: :delete, data:{confirm:"Категория '#{category.name}' будет удалёна!"}