#book-show
	.cover
		= image_tag @book.book_img ||= 'public/img/default_book_cover', size: '200x300'
	.description-side
		.title-helper
			Название книги:
		.title	
			= @book.title
		%br
		.title-helper
			Автор(ы) книги:
		.author
			= @book.author
		%br
		%table.params
			%tr
				%td
					.title-helper
						Год издания:
					= @book.year

				%td
					.title-helper
						Издательство:
					= @book.publisher ||= 'Нет данных'

				%td
					.title-helper
						Язык книги:
					= @book.language ||= 'Нет данных'

				%td
					.title-helper
						Количество страниц:
					= @book.number_of_pages ||= 'Нет данных'
		%br
		.title-helper
			ISBN10:
		= @book.ISBN10 ||= 'Не указан'
		%br
		.title-helper
			ISBN13:
		= @book.ISBN13 ||= 'Не указан'
		%br
		.title-helper
			Описание книги:
		= @book.description ||= 'Нет данных'
		%br
		.title-helper
			Ссылка на внешний источник:
		= link_to @book.link_to_book ||= 'Временно отсутствует', @book.link_to_book ||= ''
		%br
		.title-helper
			Категория книги:
		= @book.category_of_book
%br
#book-manage
	= link_to "Редактировать", edit_backend_book_path(@book)
	= link_to "Удалить", @book, :method => :delete, :data => { :confirm => "Вы уверенны, что хотите удалить книгу '#{@book.title}'" }