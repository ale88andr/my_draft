-provide(:title, "Редактирование профиля #{@user.username}")
.show-user
	%h2.headline1 Редактирование пользователя '#{@user.username}'
	.user-info
		= render 'form'
	.admin-panel
		%ul
			%li= link_to 'Показать', backend_user_path(@user)
			%li= link_to "Удалить", backend_user_path(@user), :method => :delete, :data => { :confirm => "Вы уверенны, что хотите удалить пользователя '#{@user.username}'" }
			%li= link_to "К списку Пользователей", backend_users_path
			%li= link_to 'Назад', :back
.clearfix
